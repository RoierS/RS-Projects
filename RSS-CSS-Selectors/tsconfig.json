{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                               
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,                
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@levels/*": ["src/types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}